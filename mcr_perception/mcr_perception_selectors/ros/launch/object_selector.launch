<?xml version="1.0"?>
<launch>
  <arg name="input_topic" default="/mcr_perception/object_list_merger/output_object_list"/>
  <group ns="mcr_perception">
    <node pkg="mcr_perception_selectors" type="object_selector" name="object_selector" output="screen" respawn="false">
      <remap from="~input/object_list" to="$(arg input_topic)" />

      <param name="frame_rate" type="int" value="5" />
      <param name="selection_type" type="int" value="0" />	<!-- object by name = 0; random object = 1; closest object = 2 -->
    </node>

  </group>
</launch>
